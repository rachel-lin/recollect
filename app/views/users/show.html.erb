  <!-- Row to wrap them all -->
  <div class="row">

    <!-- Left column -->
    <div class="large-4 columns">
          <%= image_tag(@user.avatar.small.url) if @user.avatar? %>
    </div>

    <!-- End of left column -->


    <!-- Right column -->
    <div class="large-8 columns">

        <div class="row">
        <h1><%= @user.name %></h1>
        </div>
       
        <div class="row">
        <h2>Uploaded Bookmarks</h2>
        <%= render @bookmarks %>
        </div>
       
        <div class="row">
        <h2>Liked Bookmarks</h2>
        <%= render @liked_bookmarks %>
        </div>

  </div>
  <!-- End of right column -->

<!-- Row to wrap them all -->
</div>

