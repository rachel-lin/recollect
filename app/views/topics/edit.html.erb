    <div class="row">
    <div class="large-12 columns">

    <h1>Edit Collection</h1>
 
   </div>
 </div>

 <div class="row">
    <div class="large-12 columns">
     <%= form_for @topic do |f| %>

     <% if @topic.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(@topic.errors.count, "error") %>.</h4>
       <ul>
         <% @topic.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

       <div class="form-group">
         <%= form_group_tag(@topic.errors[:name]) do %>
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
         <% end %>
       </div>

          <%= form_group_tag(@topic.errors[:thumbnail]) do %>
          <% if @topic.thumbnail? %>
         <p>Topic Thumbnail</p>
           <%= image_tag( @topic.thumbnail.url ) %>
         <% end %>

         <%= f.label :thumbnail %>
         <%= f.file_field :thumbnail %>
         <% end %>



       <div class="form-group">
           <%= form_group_tag(@topic.errors[:public]) do %>
           <%= f.label :public, class: 'checkbox' do %>
           <%= f.check_box :public %> Public topic
         <% end %>
         <% end %>
       </div>
       <%= f.submit "Save", class: 'button success' %>
     <% end %>
   </div>
 </div>