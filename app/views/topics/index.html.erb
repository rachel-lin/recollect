

<div class="row">
  <div class="large-8 columns">
    <h2>Collections</h2>
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <p class="collection">
          <h3>
             <%= image_tag(topic.thumbnail.large.url) if topic.thumbnail? %>
             <%= link_to topic.name, topic %>
          <small>Collated by <%= link_to (topic.user.name), edit_user_registration_path %></small></h3>

          <h5>
            <%= topic.description %>
          </h5>
        </p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="large-4 columns">
  <% if policy(Topic.new).create? %>
      <%= link_to "New Topic", new_topic_path, class: 'button secondary' %>
  <% end %>
  </div>
</div>