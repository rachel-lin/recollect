<div class="row">
<div class="large-12 columns">

<h1>New Collection</h1>
 
 <div class="row">

    <div class="large-12 columns">
     <%= form_for @topic do |f| %>
     <% if @topic.errors.any? %>
     <div class="alert-box warning">
       <h4>There are <%= pluralize(@topic.errors.count, "error") %>.</h4>
       <ul>
         <% @topic.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>


         <%= form_group_tag(@topic.errors[:name]) do %>
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
         <% end %>

         <%= form_group_tag(@topic.errors[:description]) do %>
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
         <% end %>

         <% if @topic.thumbnail? %>
         <p>Topic Thumbnail</p>
           <%= image_tag( @topic.thumbnail.url ) %>
         <% end %>

         <%= f.label :thumbnail %>
         <%= f.file_field :thumbnail %>
         <%= f.hidden_field :thumbnail %>


         <%= f.label :public, class: 'checkbox' do %>
           <%= f.check_box :public %> Public topic
         <% end %>
       
       <%= f.submit "Save", class: 'button success' %>
     <% end %>
</div>
</div>