 <h1><%= @topic.name %></h1>
 

    <% if policy(@topic).update? %>
    <%= link_to "Edit Topic", edit_topic_path, class: 'button secondary' %> 
    <% end %>

   <% if policy(Bookmark.new).create? %>
   <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'button secondary' %>
   <% end %>
 
 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @topic.description %></p>
     <% @bookmarks.each do |bookmark| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to bookmark.name, [@topic, bookmark] %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>

 </div>