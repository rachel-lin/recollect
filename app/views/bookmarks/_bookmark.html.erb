
       <div class="media" id ="bookmark-<%= bookmark.id %>">
         <div class="media-body">

             <%= link_to bookmark.name, (bookmark.url) %> | <%= bookmark.url %> <br />     

              <%= link_to "Edit", edit_topic_bookmark_path(bookmark.topic, bookmark) %> &middot;
              <%= link_to "Delete", topic_bookmark_path(bookmark.topic , bookmark), method: :delete, remote: true %> &middot;

              <% if policy(Like.new).create? %>

              <% if like = current_user.liked?(bookmark) %>
                <%= link_to [bookmark.topic, bookmark, like], method: :delete do %>Unlike<% end %>

              <% else %>
                <%= link_to [bookmark.topic, bookmark, Like.new], method: :post do %>Like<% end %>
              <% end %>

              <% end %>
         </div>
       </div>
